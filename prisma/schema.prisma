generator client {
   provider = "prisma-client-js"
}

datasource db {
   provider = "sqlite"
   url      = env("DATABASE_URL")
}

model User {
   id    String @id @unique
   name  String
   email String @unique

   auth_session Session[]
   key          Key[]
   projects     Project[]
}

model Session {
   id             String @id @unique
   user_id        String
   user_picture   String
   active_expires BigInt
   idle_expires   BigInt

   user User @relation(references: [id], fields: [user_id], onDelete: Cascade)

   @@index([user_id])
}

model Key {
   id              String  @id @unique
   hashed_password String?
   user_id         String

   user User @relation(references: [id], fields: [user_id], onDelete: Cascade)

   @@index([user_id])
}

model Project {
   id     String @id @unique @default(nanoid())
   name   String
   status String
   userId String

   user  User   @relation(references: [id], fields: [userId], onDelete: Cascade)
   tasks Task[]

   @@unique([userId, name])
}

model Task {
   id        String @id @unique @default(nanoid())
   name      String
   status    String
   projectId String

   project       Project        @relation(references: [id], fields: [projectId], onDelete: Cascade)
   taskDurations TaskDuration[]

   @@unique([projectId, name])
}

model TaskDuration {
   id     String @id @unique @default(nanoid())
   start  String
   end    String
   taskId String

   task Task @relation(fields: [taskId], references: [id])
}
